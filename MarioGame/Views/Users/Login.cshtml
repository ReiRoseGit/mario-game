@model MarioGame.Models.Users.LoginModel

<h1 class="title">
    Вход
</h1>

<form asp-controller="Users" asp-action="Login" asp-antiforgery="true" method="post" class="login-form form">
    <div class="form-item">
        <label class="form-label">Логин</label>
        <input asp-for="Login" placeholder="Введите логин:" class="form-input" />
        <span class="form-span" asp-validation-for="Login"></span>
    </div>
    

    <div class="form-item">
        <label class="form-label">Пароль</label>
        <input asp-for="Password" placeholder="Введите пароль:" class="form-input" />
        <span class="form-span" asp-validation-for="Password"></span>
    </div>
    

    <button class="form-btn" type="submit">Войти</button>
</form>